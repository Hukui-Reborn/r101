<div class="col-md-12">
  <h2 class="text-center">编辑文章</h2>
  <%= simple_form_for [@group, @post] do |f| %>
    <div class="form-group">
      <%= md_simple_editor do %>
        <%= f.input :content %>
      <% end %>
    </div>
    <%= f.submit "Submit",class:"btn btn-primary", disable_with:"Submiting..." %>
  <% end %>
</div>
